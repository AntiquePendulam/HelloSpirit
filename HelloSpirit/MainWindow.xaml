<Window x:Class="HelloSpirit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:ct="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
        xmlns:local="clr-namespace:HelloSpirit"
        mc:Ignorable="d"
        x:Name="MainWin"
        Title="HelloSpirit" MinHeight="350" Height="900" MaxWidth="1000" MinWidth="1000" SizeToContent="Height" ResizeMode="CanResizeWithGrip" WindowState="Normal" WindowStyle="None" AllowsTransparency="True" Background="Black" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
    <Window.Resources>
        <local:TextBoxViewModel x:Key="TVM" Text="ListTitle"/>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="/HelloTask;component/Fonts/#M+ 2c"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <!--Title Bar-->
            <RowDefinition Height="30"/>
            <!--Content-->
            <RowDefinition Height="Auto"/>
            <!--Grass View-->
            <RowDefinition/>
            <!--Footer-->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Row0 : TitleBar Grid-->
        <Border BorderThickness="0,0,0,1" VerticalAlignment="Top" Margin="0,1,0,0" Height="30">
            <Grid x:Name="TitleBar" Background="Black">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="LightGray"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <!--Column 0 Title Text-->
                <Label Content="HelloSpirit - Say Hello to your Spirits." FontSize="15" FontStyle="Italic"/>

                <!--Column 2 Minimum & Close button-->
                <UniformGrid Grid.Column="3" Rows="1">
                    <Button Content="-" Style="{StaticResource ButtonDefaultStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <ei:ChangePropertyAction TargetName="Window" PropertyName="WindowState" Value="Minimized"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button x:Name="CloseButton" Content="X">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ButtonDefaultStyle}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <!--Row 1 Task View-->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="Label" Content="{Binding}" Foreground="WhiteSmoke" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
            <UniformGrid Grid.Row="1" Rows="1">
                <UniformGrid.Resources>
                    <Style TargetType="ListBox">
                        <Setter Property="Background" Value="DimGray"/>
                        <Setter Property="Margin" Value="2,2,2,4"/>
                        <Setter Property="MinHeight" Value="100"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                        <!--ListBox Template-->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBox">
                                    <Border CornerRadius="8" BorderThickness="2" BorderBrush="{TemplateBinding BorderBrush}" VerticalAlignment="Top">
                                        <StackPanel>
                                            <TextBox Name="ListTitle" Text="{Binding Text,Source={StaticResource TVM}}"
                                                    FontFamily="{TemplateBinding FontFamily}" Margin="5,2" FontSize="20" Style="{StaticResource TextBoxDefaultStyle}"
                                                    FontWeight="Bold" VerticalAlignment="Top" Background="{Binding Background, ElementName=MainWin}" Foreground="White" SelectionBrush="Gray">
                                            </TextBox>
                                            <ItemsPresenter VerticalAlignment="Top"/>
                                            <Button x:Name="AddButton" Height="25" Content="Add" Foreground="WhiteSmoke" FontSize="18" VerticalAlignment="Bottom" HorizontalContentAlignment="Left" Padding="10,0" Style="{StaticResource ButtonDefaultStyle}"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!--ListBox ItemTemplate-->
                        <Setter Property="ItemTemplate">
                            <Setter.Value>
                                <DataTemplate DataType="{x:Type local:Spirit}">
                                    <StackPanel VerticalAlignment="Top">
                                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" SelectionBrush="LightGray" FontSize="18" FontWeight="Bold" Foreground="Black" Width="Auto" MinWidth="20" Style="{StaticResource TextBoxDefaultStyle}" Background="{x:Null}" HorizontalAlignment="Left"/>
                                        <Label Content="{Binding Title, UpdateSourceTrigger=PropertyChanged}" FontSize="15" Foreground="Black" Background="{x:Null}" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Margin" Value="5,2"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                        <Setter Property="Background" Value="WhiteSmoke"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ListItem" CornerRadius="2" Background="{TemplateBinding Background}">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Gray"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </UniformGrid.Resources>
                <!--Contents-->
                <ListBox x:Name="TestList" ItemsSource="{Binding}"/>
                <ListBox/>
                <ListBox/>
            </UniformGrid>
        </Grid>

        <!--Row 2 GrassView-->
        <Border Grid.Row="2" Height="160" BorderThickness="0,1" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Your contributions" FontSize="20" Foreground="Gainsboro"/>
                <ct:WebView Grid.Row="1" x:Name="GrassView"/>
            </Grid>
        </Border>

        <!--Row 3 Footer-->
        <Grid Grid.Row="3" Height="15" Background="DarkGray" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
